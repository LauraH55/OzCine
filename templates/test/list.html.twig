    {# 
        Reviews (le mieux serait de le faire dans une autre page
        Les Reviews contenus dans $movie->getReviews() 
    #}
    <ul>

        {% for review in movie.reviews %}
           <li>{{ review.content }}</li> 
        {% endfor %}
    
    
    </ul>
    {% endfor %}
</ul>

{% endblock %}
