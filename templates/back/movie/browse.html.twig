{% extends 'back/base_admin.html.twig' %}

{% block title %}Liste des films{% endblock %}

{% block body %}

<h1>Liste des films</h1>

<p><a href="{{ path('admin_add_movie') }}" class="btn btn-success">Nouveau film</a></p>

{# https://getbootstrap.com/docs/5.0/content/tables/ #}
<table class="table table-hover table-striped">
  {# En-tÃªtes du tableau #}
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Titre</th>
      <th scope="col">Date de publication</th>
      <th scope="col">actions</th>
    </tr>
  </thead>
  <tbody>

  {# On boucle sur les films #}
    {% for movie in movies %}        
    <tr>
      <th scope="row">{{ movie.id }}</th>
      <td><a href="{{ path('admin_read', {id: movie.id}) }}">{{ movie.title }}</a></td>
      {# @see https://www.php.net/manual/fr/datetime.format.php#refsect1-datetime.format-parameters #}
      <td>{{ movie.releaseDate|date('d-m-Y') }}</td>
      <td><form action="{{ path('admin_delete_movie', {id: movie.id}) }}" onsubmit="return confirm('Supprimer le film #{{ movie.id }} ?')" method="POST">

        <button class="btn btn-sm btn-danger" type="submit">Supprimer</button>

        {# Fake HTTP Method, see https://symfony.com/doc/current/routing.html#matching-http-methods #}
        <input type="hidden" name="_method" value="DELETE"/>
        {# CSRF Token manuel see https://symfony.com/doc/current/security/csrf.html#generating-and-checking-csrf-tokens-manually #}
        <input type="hidden" name="token" value="{{ csrf_token('delete-movie') }}"/>
      </form></td>
    </tr>
    </tr>
    {% endfor %}
      </tbody>
</table>

{% endblock %}
